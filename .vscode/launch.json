{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.js", 
      "console": "integratedTerminal",
      "restart": true, 
      "env": {
        "NODE_ENV": "development" 
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "skibidi",
      "port": 9229, 
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
